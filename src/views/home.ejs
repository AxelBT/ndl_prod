            <div class="choices-container flex flex-col md:flex-row justify-center items-center gap-6 md:gap-8">
                <!-- Pilule Rouge -->
                <div class="choice-group text-center w-full md:w-1/2">
                    <div class="choice-label text-red-400">CHOIX DE LIBÉRATION</div>
                    <a href="/choose-role" class="pill-btn pill-red inline-block px-10 py-5 rounded-full text-xl font-bold">
                        <div class="flex items-center justify-center gap-3">
                            <span>Pilule Rouge</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                            </svg>
                        </div>
                        <div class="text-sm mt-2 opacity-90 font-normal">Rejoindre la Résistance NIRD</div>
                    </a>
                    <p class="text-gray-400 text-sm mt-4 px-4">
                        Découvre les alternatives libres, reprends le contrôle de tes données et contribue à un numérique éthique.
                    </p>
                </div>
                
                <!-- Séparateur -->
                <div class="my-4 md:my-0 text-gray-600 font-bold text-xl">OU</div>
                
                <!-- Pilule Bleue -->
                <div class="choice-group text-center w-full md:w-1/2">
                    <div class="choice-label text-blue-400">CHOIX DE CONFORMITÉ</div>
                    <a href="https://www.microsoft.com/windows" target="_blank" class="pill-btn pill-blue inline-block px-10 py-5 rounded-full text-xl font-bold">
                        <div class="flex items-center justify-center gap-3">
                            <span>Pilule Bleue</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                        </div>
                        <div class="text-sm mt-2 opacity-90 font-normal">Restez dans la Matrice</div>
                    </a>
                    <p class="text-gray-400 text-sm mt-4 px-4">
                        Accepte les mises à jour forcées, l'obsolescence programmée et la collecte permanente de données.
                    </p>
                </div>
            </div>
        </div>
        
        <!-- Informations supplémentaires -->
        <div class="mt-16 pt-8 border-t border-gray-800 fade-in-element delay-3">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
                <div class="p-4">
                    <div class="text-green-400 text-2xl font-bold mb-2">+150K</div>
                    <div class="text-gray-400 text-sm">Membres de la résistance</div>
                </div>
                <div class="p-4">
                    <div class="text-green-400 text-2xl font-bold mb-2">100%</div>
                    <div class="text-gray-400 text-sm">Logiciels libres & open-source</div>
                </div>
                <div class="p-4">
                    <div class="text-green-400 text-2xl font-bold mb-2">24/7</div>
                    <div class="text-gray-400 text-sm">Support communautaire actif</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script Matrix amélioré -->
    <script>
        // Configuration de l'effet Matrix
        const canvas = document.getElementById('matrix-canvas');
        const ctx = canvas.getContext('2d');
        
        // Caractères Matrix (plus variés)
        const chars = "01アイウエオABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz$+-*/=%\"'#&_(),.;:?!\\|{}<>[]^~";
        const matrix = chars.split("");
        
        let fontSize = 14;
        let columns;
        let drops = [];
        
        // Initialisation
        function initMatrix() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            
            columns = Math.floor(canvas.width / fontSize);
            drops = [];
            
            for(let i = 0; i < columns; i++) {
                drops[i] = Math.floor(Math.random() * canvas.height / fontSize);
            }
        }
        
        // Dessin de l'effet Matrix
        function drawMatrix() {
            // Fond semi-transparent pour effet de traînée
            ctx.fillStyle = 'rgba(10, 10, 10, 0.05)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Couleur et style du texte
            ctx.fillStyle = '#00ff95';
            ctx.font = `${fontSize}px 'Courier New', monospace`;
            
            // Dessin des caractères
            for(let i = 0; i < drops.length; i++) {
                // Sélection aléatoire d'un caractère
                const char = matrix[Math.floor(Math.random() * matrix.length)];
                
                // Position
                const x = i * fontSize;
                const y = drops[i] * fontSize;
                
                // Dessin avec effet de dégradé
                const gradient = ctx.createLinearGradient(x, y, x, y + fontSize * 3);
                gradient.addColorStop(0, '#00ff95');
                gradient.addColorStop(0.5, '#00cc77');
                gradient.addColorStop(1, '#009955');
                
                ctx.fillStyle = gradient;
                ctx.fillText(char, x, y);
                
                // Réinitialisation de la goutte quand elle sort de l'écran
                if(y > canvas.height && Math.random() > 0.975) {
                    drops[i] = 0;
                }
                
                // Déplacement vers le bas
                drops[i]++;
            }
        }
        
        // Gestion du redimensionnement
        window.addEventListener('resize', initMatrix);
        
        // Initialisation et boucle d'animation
        initMatrix();
        const matrixInterval = setInterval(drawMatrix, 35);
        
        // Animation d'entrée des éléments
        document.addEventListener('DOMContentLoaded', function() {
            const fadeElements = document.querySelectorAll('.fade-in-element');
            
            fadeElements.forEach((element, index) => {
                element.style.animationDelay = `${index * 0.2}s`;
            });
        });
        
        // Effet d'interaction sur les boutons
        document.querySelectorAll('.pill-btn').forEach(button => {
            button.addEventListener('mouseenter', function() {
                this.style.animation = 'pulseGlow 1.5s infinite';
            });
            
            button.addEventListener('mouseleave', function() {
                this.style.animation = '';
            });
        });
    </script>
</body>
</html>