            --matrix-bg: #0a0a0a;
            --matrix-card-bg: rgba(18, 18, 18, 0.9);
            --matrix-glass: rgba(255, 255, 255, 0.05);
        }
        
        body {
            background: var(--matrix-bg);
            min-height: 100vh;
            font-family: 'Inter', system-ui, sans-serif;
            position: relative;
            overflow-x: hidden;
        }
        
        /* Effets de fond avancés */
        .matrix-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -2;
            background: 
                radial-gradient(circle at 20% 30%, rgba(0, 255, 149, 0.08) 0%, transparent 40%),
                radial-gradient(circle at 80% 70%, rgba(0, 102, 255, 0.08) 0%, transparent 40%),
                linear-gradient(to bottom, rgba(10, 10, 10, 0.95), rgba(5, 5, 5, 0.98));
        }
        
        .grid-pattern {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background-image: 
                linear-gradient(rgba(0, 255, 149, 0.05) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 255, 149, 0.05) 1px, transparent 1px);
            background-size: 50px 50px;
            opacity: 0.3;
        }
        
        /* Animation d'entrée améliorée */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px) scale(0.95);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        /* Style des cartes de rôle améliorées */
        .role-card {
            background: linear-gradient(145deg, var(--matrix-card-bg), rgba(25, 25, 25, 0.9));
            backdrop-filter: blur(12px);
            border: 1px solid rgba(0, 255, 149, 0.15);
            border-radius: 24px;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            z-index: 1;
            height: 100%;
            display: flex;
            flex-direction: column;
        }
        
        .role-card::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, 
                rgba(0, 255, 149, 0.1) 0%, 
                transparent 40%, 
                rgba(0, 102, 255, 0.05) 100%);
            opacity: 0;
            transition: opacity 0.5s ease;
            z-index: -1;
        }
        
        .role-card::after {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, 
                transparent, 
                rgba(0, 255, 149, 0.3), 
                transparent);
            border-radius: 26px;
            opacity: 0;
            transition: opacity 0.5s ease;
            z-index: -2;
        }
        
        .role-card:hover {
            transform: translateY(-12px) scale(1.02);
            border-color: var(--matrix-primary);
            box-shadow: 
                0 25px 50px -12px rgba(0, 0, 0, 0.5),
                0 0 0 1px rgba(0, 255, 149, 0.3),
                0 10px 30px rgba(0, 255, 149, 0.2);
        }
        
        .role-card:hover::before {
            opacity: 1;
        }
        
        .role-card:hover::after {
            opacity: 1;
            animation: glow 2s ease-in-out infinite alternate;
        }
        
        .role-icon {
            width: 88px;
            height: 88px;
            border-radius: 22px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            transition: all 0.5s ease;
            position: relative;
            background: var(--matrix-glass);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .role-icon i {
            font-size: 2.5rem;
            transition: all 0.5s ease;
        }
        
        .role-card:hover .role-icon {
            transform: scale(1.15) rotate(5deg);
            background: rgba(0, 255, 149, 0.15);
            border-color: rgba(0, 255, 149, 0.4);
        }
        
